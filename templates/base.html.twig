<!DOCTYPE html>
<html  class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX 
            style="width:150px;height:112px"
        #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{asset("DataTables/datatables.js")}}"></script>
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100">
        <header class="d-flex flex-column flex-sm-row" style="background-color : #0F3170" >
            <img src="{{asset("/images/logo.png")}}" alt="logo" class="img-fluid" style="width:150px;height:112px">
            
        </header>
        <div class="container-fluid bg-secondary py-2">
            <ul class="nav flex-column flex-sm-row justify-content-center" >
                {% if is_granted("ROLE_VIEWER") %}
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-secondary" href="{{path("app_resultat")}}">Accueil</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-secondary" href="{{path("app_login")}}">Accueil</a>
                    </li>
                {% endif %}

                <li class="nav-item">
                    <a class="nav-link text-white btn btn-secondary" href="{{path("app_apropos")}}">A propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white btn btn-secondary" href="{{path("app_contact")}}">Nous contacter</a>
                </li>
                 {% if is_granted("ROLE_VIEWER") %}
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-danger" href="{{path("app_logout")}}">Deconnexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        {% block body %}{% endblock %}
        <footer class="footer mt-auto py-3 bg-dark">
            <div class="container">
                <span class="text-light">Place sticky footer content here.</span>
            </div>
        </footer>
    </body>
</html>
