<!DOCTYPE html>
<html  class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{asset("DataTables/datatables.js")}}"></script>
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100">
        <header class="bg-primary">
            <div class="container-fluid ">
                <p class="display-1 text-center fw-bold"> Observatoire citoyen des élections</p>
            </div>
        </header>
        <div class="row">
            <div class="bg-secondary col-lg-2 col-md-3 col-sm-4 col-12 pt-4 min-vh-100">
                <ul class="nav flex-column px-3">
                    <li class="nav-item">
                        <a class="btn btn-info w-100 my-2" href="#">Resultats</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-success w-100  my-2" href="#">Synchroniser</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary w-100  my-2" href="{{path("consolidation")}}">Consolider</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-dark w-100  my-2 " href="{{path("administration")}}">Admin</a>
                    </li>
                    <li class="p-2">
                        <div class="m-0 rounded-3 border shadow p-2">
                            {% if app.user %}
                                <span class="h4 fw-bold d-block text-center">{{app.user.username}}</span>
                                <a href="{{path("update_password",{'id':app.user.id})}}" class="btn btn-info my-1 w-100">Changer MDP</a>
                            {% endif %} 
                            <a href="{{path("app_logout")}}" class="btn btn-danger my-1 w-100">Deconnexion</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-10 col-md-9 col-sm-8  col-12">
                {% block body %}{% endblock %}
            </div>
        </div>
        <footer class="footer mt-auto py-3 bg-dark">
            <div class="container">
                <span class="text-light">Place sticky footer content here.</span>
            </div>
        </footer>
    </body>
</html>
