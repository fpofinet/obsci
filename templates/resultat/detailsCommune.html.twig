{% extends 'admin.html.twig' %}

{% block title %}Resultat{% endblock %}

{% block body %}
<div class="container-fluid my-3">
    <p class="text-center h3 fw-bold text-decoration-underline">Commune : {{label}}/{{dep}}/{{province}}</p>
</div>
<div class="mx-3 px-3 mb-5">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>PROVINCE</th>
                    <th>DEPARTEMENT</th>
                    <th>COMMUNE</th>
                    <th>QUARTIER</th>
                    <th>BUREAU VOTE</th>
                    <th>NUMERO BUREAU</th>
                    <th>INSCRIT</th>
                    <th>VOTANT</th>
                    <th>BULLETINS NULS</th>
                    <th>SUFFRAGE EXPRIME</th>
                    <th>VOTE OUI</th>
                    <th>VOTE NON</th>
                </tr>
            </thead>
            <tbody>
                {% for c in datas %}
                    <tr>
                        <td>{{c.commune.departement.province.libelle}}</td>
                        <td>{{c.commune.departement.libelle}}</td>
                        <td>{{c.commune.libelle}}</td>
                        <td>{{c.quartier}}</td>
                        <td>{{c.libelleBureauVote}}</td>
                        <td>{{c.numeroBureauVote}}</td>
                        <td>{{c.inscrit}}</td>
                        <td>{{c.votant | number_format(0, ',', '.')}}</td>
                        <td>{{c.suffrageNul | number_format(0, ',', '.')}}</td>
                        <td>{{c.suffrageExprime | number_format(0, ',', '.')}}</td>
                        <td>{{c.voteOui | number_format(0, ',', '.')}}</td>
                        <td>{{c.voteNon | number_format(0, ',', '.')}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
   
