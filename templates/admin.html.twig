<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{asset("DataTables/datatables.js")}}"></script>
        {% endblock %}
    </head>
    <body class="d-flex flex-column">
        <header class="d-flex justify-content-center bg-white" style="">
            <img src="{{asset("/images/logo.png")}}" alt="logo" class="img-fluid" style="width:650px;height:125px"> 
        </header>
        <div class="w-100 py-2 d-flex justify-content-between" style="background-color : #0F3170">
            <a class="ms-5 text-white" href="{{path("app_superviseur")}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"/>
                </svg>
            </a>
            {% if app.user %}
                <a href="{{path("app_logout")}}" class="btn btn-danger me-5">Deconnexion</a>
            {% endif %}
        </div>
        <div class="container-fluid mt-1 mb-0">
            {% if app.user %}
                <p class="float-start">
                   Vous êtes connecter en tant que: <span class="fw-bold">{{app.user.nom}}{{" "}}{{app.user.prenom}}</span>
                </p>
            {% endif %}
        </div>
        {% block body %}{% endblock %}
           
    </body>
</html>
