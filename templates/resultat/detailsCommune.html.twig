{% extends 'admin.html.twig' %}

{% block title %}Resultat{% endblock %}

{% block body %}
<div class="container-fluid my-3">
    <p class="text-center h3 fw-bold text-decoration-underline">Résultat Commune {{label}}</p>
</div>
<div class="container mb-5">
    <div class="row g-3">
        {% for c in datas %}
             <div class="col-12 col-sm-6 col-lg-4">
                <div class="card">
                    <div class="card-header h3 text-center">
                        <p class="text-center h3 fw-bold">Resultat bureau de vote {{c.codeBureau}}</p>
                    </div>
                    <div class="card-body  p-3">
                        <div class="border border-2 rounded rounded-2 mb-2 p-3">
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex my-1">
                                        <div class="flex-grow-1">
                                            <div class="progress" style="height : 40px">
                                                {% if c.suffrageExprime != 0  %}
                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: {{ ( c.voteOui / c.suffrageExprime )  * 100 }}%" aria-valuenow="{{ ( c.voteOui / c.suffrageExprime ) * 100 }}" aria-valuemin="0" aria-valuemax="100">oui={{ (( c.voteOui / c.suffrageExprime )  * 100 ) | number_format}}%</div>
                                                    <div class="progress-bar bg-danger" role="progressbar" style="width: {{ ( c.voteNon / c.suffrageExprime )  * 100 }}%" aria-valuenow="{{ ( c.voteNon / c.suffrageExprime ) * 100 }}" aria-valuemin="0" aria-valuemax="100">non={{ (( c.voteNon / c.suffrageExprime )  * 100 ) | number_format}} % </div>
                                                {% else %}
                                                    <div class="progress-bar bg-light" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">oui=0%</div>
                                                    <div class="progress-bar bg-light" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">non=0%</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-column p-3">
                            <div class="row my-0">
                                <div class="col-6">Nombre de votant : </div>
                                <div class="col-6">{{c.votant}}</div>
                            </div>
                            <hr>
                            <div class="row my-0">
                                <div class="col-6">Suffrage exprimé :</div>
                                <div class="col-6">{{c.suffrageExprime}}</div>
                            </div>
                            <hr>
                            <div class="row my-0">
                                <div class="col-6">Bulletin nul : </div>
                                <div class="col-6">{{c.suffrageNul}}</div>
                            </div>
                            <hr>
                            <div class="row my-0">
                                <div class="col-6">Vote oui : </div>
                                <div class="col-6">{{c.voteOui}}</div>
                            </div>
                            <hr>
                            <div class="row my-0">
                                <div class="col-6">Vote non :</div>
                                <div class="col-6">{{c.voteNon}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
